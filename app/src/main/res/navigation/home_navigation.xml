<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bruno13palhano.jaspe.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_product"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false"
            app:popUpToSaveState="true"
            app:destination="@id/productFragment" />

        <action
            android:id="@+id/action_home_to_common_categories"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false"
            app:popUpToSaveState="true"
            app:destination="@id/categoriesFragment"/>

        <action
            android:id="@+id/action_home_to_search"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false"
            app:popUpToSaveState="true"
            app:destination="@id/search_navigation"/>

    </fragment>

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.bruno13palhano.jaspe.ui.category.common.CategoriesFragment"
        android:label="CategoriesFragment"
        tools:layout="@layout/categories_common_fragment">

        <argument
            android:name="categoryRoute"
            app:argType="string" />
        <action
            android:id="@+id/action_categories_to_product"
            app:popUpTo="@id/categoriesFragment"
            app:popUpToInclusive="false"
            app:popUpToSaveState="true"
            app:destination="@id/product_navigation" />
    </fragment>
</navigation>