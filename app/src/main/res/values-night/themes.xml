<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jaspe" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_baby</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pink_baby</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/gray_light</item>
    </style>

    <style name="ProductCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="colorPrimary">?colorPrimary</item>
        <item name="colorPrimaryDark">?colorPrimaryDark</item>
        <item name="colorAccent">?colorAccent</item>
        <item name="android:statusBarColor">?colorAccent</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AlertDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:colorAccent">?colorSecondary</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textColorPrimary">?colorSecondary</item>

        <item name="buttonBarPositiveButtonStyle">
            @style/PositiveButtonStyle
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/NegativeButtonStyle
        </item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="AlertDialogStyle2" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:colorAccent">?colorSecondary</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textColorPrimary">?colorSecondary</item>

        <item name="buttonBarPositiveButtonStyle">
            @style/PositiveButtonStyle2
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/NegativeButtonStyle2
        </item>
    </style>

    <style name="PositiveButtonStyle2" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorPrimary</item>
        <item name="backgroundTint">?colorSecondary</item>
    </style>

    <style name="NegativeButtonStyle2" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorPrimary</item>
        <item name="backgroundTint">?colorSecondary</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector</item>
        <item name="hintTextColor">?colorSecondary</item>
        <item name="android:textColorHint">?colorSecondary</item>
    </style>

    <style name="CustomTextInputLayout2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_2</item>
        <item name="hintTextColor">?colorSecondary</item>
        <item name="android:textColorHint">?colorSecondary</item>
    </style>
</resources>